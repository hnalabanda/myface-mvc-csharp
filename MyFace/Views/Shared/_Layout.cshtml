<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyFace</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/MyFace.css" media="screen" />
    <script type="text/javascript" src="js/site.js"></script>
</head>
<body >
    <header>
        <nav>
            <ul class="myface-banner">
                <li>
                    <a  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a  asp-area="" asp-controller="Posts" asp-action="PostsPage">Posts</a>
                </li>
                <li>
                    <a  asp-area="" asp-controller="Users" asp-action="UsersPage">Users</a>
                </li>
                <li>
                    <a  asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
            </ul>
          
        </nav>
    </header>

<main role="main" class="myface-body">
  
    @RenderBody()

</main>
 

    <footer >
        <div class="container">
            &copy; 2020 - MyFace - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
 
</body>
</html>
